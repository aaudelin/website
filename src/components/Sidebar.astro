---
import MenuIcon from "./MenuIcon.astro";
import Socials from "./Socials.astro";
---

<MenuIcon/>
<div class="navbar">
    <nav>
        <ul>
            <li><a href="#about" class="active">Who am I</a></li>
            <li><a href="#career">What have I done</a></li>
            <li><a href="#why">Why me</a></li>
            <li><a href="#reachMe">How to contact me</a></li>
        </ul>
        <div class="socials">
            <Socials size="30"/>
        </div>
    </nav>

</div>


<style>

    nav {
        display: flex;
        width: 100%;
        align-items: center;
    }

    .socials {
        width: 110px;
        margin-left: auto;
    }


    .wrapper {
        position: sticky;
    }

    .navbar {
        padding: 5vh 10vw;
        position: sticky;
        top: 0;
        display: flex;
        min-width: 200px;
        background-color: var(--accent-darker);
        z-index: 10;
        align-items: center;
    }

    ul {
        padding: 0;
        margin: 0;
        display: flex;
        gap: 40px;
    }

    li {
        list-style: none;
        font-size: 20px;
        margin: 10px 0;
        cursor: pointer;
    }

    a {
        color: var(--accent-lighter);
        position: relative;
        text-decoration: none;
    }

    a::before {
        content: "";
        position: absolute;
        display: block;
        width: 20px;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: var(--accent-lighter);
        transition: width 0.5s ease;
    }

    a.active::before {
        width: 100%;
        background-color: var(--color-primary);
    }

    a:hover::before {
        width: 100%;
    }


    @media (max-width: 900px) {
        nav:not(.active-nav) {
            display: none;
        }

        .socials {
            background-color: var(--accent-darker);
            margin-left: 0;
            padding-right: 100vw;
            padding-left: 5px;
            padding-top: 5px;
        }

        a::before {
            background-color: var(--accent-darker);
        }

        .navbar {
            width: 100%;
            margin: 0;
            padding: 0;
            position: fixed;
            top: 60px;
            background-color: var(--accent-lighter);
        }

        nav {
            flex-direction: column;
            align-items: flex-start;
        }

        ul {
            flex-direction: column;
            gap: 2px;
            padding-left: 10px;
        }

        a {
            color: var(--accent-darker);
        }
    }

</style>

<script>
    const linkTags = document.querySelectorAll("a");

    linkTags.forEach((tag) => {
        tag.addEventListener("click", () => {
            document.querySelector(".active")?.classList?.remove("active")
            tag.classList?.add("active")
        });
    });

</script>
