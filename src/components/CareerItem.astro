---
const {title, company, from, to} = Astro.props
---

<div class="main">
    <div class="panel from">
        {from}
    </div>
    <div class="panel description">
        <div class="job-position">{title} at {company}</div>
        <div class="underline"/>
        <div class="content">
            <slot/>
        </div>
    </div>
</div>

<style>

    .main {
        display: flex;
        margin-top: 10vh;
    }

    .panel {
        display: flex;
    }

    .from {
        justify-content: center;
        font-size: 8rem;
        font-weight: bold;
        text-transform: uppercase;
        min-width: 40vw;
        padding-bottom: 30px;
    }

    .description {
        flex-direction: column;
        padding-right: 5vw;
    }

    .content {
        letter-spacing: 0.02em;
        line-height: 1.5em;
        max-width: 600px;
    }

    .job-position {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .underline {
        width: 50px;
        height: 2px;
        background-color: var(--color-primary);
        margin-bottom: 1rem;
    }

    @media (max-width: 900px) {
        .main {
            flex-direction: column;
        }

        .description {
            padding-left: 5vw;
        }
    }

</style>
