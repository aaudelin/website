<div class="container">
    <a class="main" href="#career">
        <div>My journey so far</div>
        <div class="scroll-icon"></div>
    </a>
</div>

<style>

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .main {
        position: absolute;
        bottom: 5vh;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 20px;
        border: var(--color-primary) 1px solid;
        padding: 10px 30px;
        border-radius: 40px;
        cursor: pointer;
    }

    @media (max-width: 500px) {
        .main {
            display: none;
        }
    }

    @media (max-height: 730px) {
        .main {
            display: none;
        }
    }

    .scroll-icon {
        width: 30px;
        height: 50px;
        border: 2px solid var(--accent-lighter);
        border-radius: 50px;
        position: relative;
        overflow: hidden;

        &:before {
            content: "";
            position: absolute;
            left: 50%;
            top: 20px;
            width: 6px;
            height: 6px;
            border-radius: 100%;
            transform: translateX(-50%);
            background: var(--accent-lighter);
            animation: scrollDown2 1.5s ease infinite;
        }

        &:after {
            content: "";
            position: absolute;
            left: 50%;
            top: 5px;
            width: 6px;
            height: 15px;
            border-radius: 3px;
            transform: translateX(-50%);
            background: var(--accent-lighter);
        }
    }

    @keyframes scrollDown2 {
        0% {
            transform: translate(-50%, 0px);
            opacity: 0;
        }
        50% {
            transform: translate(-50%, 8px);
            opacity: 1;
        }
        100% {
            transform: translate(-50%, 16px);
            opacity: 0;
        }
    }

    a {
        text-decoration: none;
        color: var(--accent-lighter);
    }
</style>
